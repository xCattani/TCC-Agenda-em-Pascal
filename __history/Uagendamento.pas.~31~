unit Uagendamento;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Controls, FMX.Forms, FMX.Graphics, FMX.Dialogs,
  FMX.Controls.Presentation, FMX.StdCtrls, FMX.Objects, FMX.Layouts, FMX.ListBox,
  FMX.DateTimeCtrls, FMX.Calendar, FMX.Edit, FMX.EditBox, FMX.NumberBox, unitAgend,
  FMX.Colors;

type
  TformAgendamento = class(TForm)
    lay1: TLayout;
    Image1: TImage;
    Label1: TLabel;
    Rectangle1: TRectangle;
    DateEdit: TDateEdit;
    edtClient: TEdit;
    lblClient: TLabel;
    lblDate: TLabel;
    lblPhone: TLabel;
    lblSched: TLabel;
    boxPhone: TNumberBox;
    btnConfirm: TRoundRect;
    TimeEdit: TTimeEdit;
    layClientL: TLayout;
    Layout2: TLayout;
    Layout3: TLayout;
    Layout4: TLayout;
    Layout1: TLayout;
    Layout5: TLayout;
    Layout6: TLayout;
    Layout7: TLayout;
    Rectangle2: TRectangle;
    Image2: TImage;
    odSched: TOpenDialog;
    SDSched: TSaveDialog;
    procedure Image1Click(Sender: TObject);
    procedure btnConfirmClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  formAgendamento: TformAgendamento;
  Agendamento: array of TAgendamento;
  counter : Integer;

implementation

{$R *.fmx}

procedure TformAgendamento.btnConfirmClick(Sender: TObject);

var
  fil : TFileStream;
  Client : String;
  Phone : String;
  Date : TDate;
  Sched : TTime;
  DateSched : TDateTime;
  sizeBuffer : Integer;

begin

  SetLength(Agendamento, Length(Agendamento)+1);
  counter := Length(Agendamento);

  Agendamento[counter -1] := TAgendamento.Create; //Criando a instância


  //Fazendo o objeto receber os valores
  Agendamento[counter -1].setClient(formAgendamento.lblClient.Text);
  Agendamento[counter -1].setPhone(formAgendamento.boxPhone.Text);
  Agendamento[counter -1].setSched(formAgendamento.TimeEdit.Time);
  Agendamento[counter -1].setDate(formAgendamento.DateEdit.Date);

  if SDSched.Execute then


  fil := TFileStream.Create(SDSched.FileName, fmCreate);
  Fil.Position := 0;
  Client := Agendamento[counter -1].getClient;

  sizeBuffer := Length(Client);

  fil.WriteBuffer(sizeBuffer, sizeOf(sizeBuffer));
  if sizeBuffer > 0 then

    fil.WriteBuffer( Pointer(Client)^, sizeBuffer );

    Phone := Agendamento[counter -1].getPhone;
    sizeBuffer := sizeOf(Phone);
    fil.WriteBuffer( Phone, sizeBuffer );

    Date := Agendamento[counter -1].getDate;
    sizeBuffer := sizeOf(Date);
    fil.WriteBuffer( Date, sizeBuffer );

    Sched := Agendamento[counter -1].getSched;
    sizeBuffer := sizeOf(Sched);
    fil.WriteBuffer( Sched, sizeBuffer );

    fil.Free;
    formAgendamento.Close;

end;

procedure TformAgendamento.Image1Click(Sender: TObject);
begin
  formAgendamento.Close;
end;


end.
